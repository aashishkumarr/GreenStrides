<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImportData"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/importDataScreenImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:contentDescription="logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/importDataScreenTextView"
        android:layout_width="282dp"
        android:layout_height="73dp"
        android:layout_below="@+id/importDataScreenImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:rotationX="-4"
        android:text="Import data from Google Maps"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#4CAF50"
        android:textSize="30sp" />

    <Button
        android:id="@+id/importDataScreenNextButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/importDataScreenTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:background="#4CAF50"
        android:text="Next"
        android:textColor="#FFF">

    </Button>

</RelativeLayout>

